@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}

<!DOCTYPE html>
<html>
<body>
  <div class="main-container">
    <div class="login-container">
        <h1 class="text-white">@ViewData["Title"]</h1>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group">
                <label for="Input_Email" class="text-white">Correo electrónico</label>
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="Input_Password" class="text-white">Contraseña</label>
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="contraseña" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label text-white">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Iniciar sesión</button>
            <p>
                <a id="forgot-password" asp-page="./ForgotPassword" class="text-white">¿Olvidaste tu contraseña?</a>
            </p>
            <p>
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">Registrarse como usuario nuevo</a>
            </p>
            <p>
                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-white">Reenviar confirmación de correo electrónico</a>
            </p>
        </form>
    </div>
  </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
