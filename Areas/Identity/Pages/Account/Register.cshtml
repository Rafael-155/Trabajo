@page
@model RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<!DOCTYPE html>
<html>
<body>
  <div class="main-container">
    <div class="login-container">
      <h2 class="text-white">@ViewData["Title"]</h2>
      <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-group">
          <label for="Input_Email" class="text-white">Correo electrónico</label>
          <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
          <label for="Input_Password" class="text-white">Contraseña</label>
          <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="contraseña" />
          <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Input_ConfirmPassword" class="text-white">Confirmar Contraseña</label>
            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="contraseña" type="password" data-val="true" data-val-equalto="La contraseña y la confirmación de contraseña no coinciden." data-val-equalto-other="*.Password" id="Input_ConfirmPassword" name="Input.ConfirmPassword" data-val-required="The Password field is required.">
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>

        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
        <p>
          <a id="forgot-password" asp-page="./ForgotPassword" class="text-white">¿Olvidaste tu contraseña?</a>
        </p>
        <p>
          <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="text-white">¿Ya tienes una cuenta? Inicia sesión</a>
        </p>
        <p>
          <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="text-white">Reenviar confirmación de correo electrónico</a>
        </p>
      </form>
    </div>
  </div>
</body>
</html>
